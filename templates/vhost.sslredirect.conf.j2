<VirtualHost *:80>
    ServerName {{ server_name }}
    {% for alias in server_aliases %}
      ServerAlias {{ alias }}
    {% endfor %}

    <IfModule mod_rewrite.c>
      RewriteEngine On
      RewriteCond %{HTTPS} off
      RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} 
    </IfModule>
</VirtualHost>


